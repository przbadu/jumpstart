<div class="card w-1/2 m-auto bg-base-100 shadow-xl">
  <div class="card-body w-full m-auto">
    <h2 class="text-center text-2xl">Change your password</h2>

    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>
      <%= f.hidden_field :reset_password_token %>

      <div class="form-control mb-6">
        <%= f.label :password, class: 'label' %>
        <%= f.password_field :password, autofocus: true, autocomplete: "off", class: 'input input-bordered w-full', placeholder: "Password" %>
        <% if @minimum_password_length %>
          <p class="text-muted"><small><%= @minimum_password_length %> characters minimum</small></p>
        <% end %>
      </div>

      <div class="form-control mb-6">
        <%= f.label :password_confirmation, class: 'label' %>
        <%= f.password_field :password_confirmation, autocomplete: "off", class: 'input input-bordered w-full', placeholder: "Confirm Password" %>
      </div>

      <div class="mb-6 d-grid">
        <%= f.submit "Change my password", class: 'btn btn-primary btn-wide' %>
      </div>
    <% end %>

    <div class="text-center">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
