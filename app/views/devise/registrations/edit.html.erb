<div class="card w-1/2 m-auto bg-base-100 shadow-xl">
  <div class="card-body w-full m-auto">
    <h1 class="text-center text-2xl">Edit Account Information</h1>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="form-control mb-6">
        <%= f.label :name, class: 'label' %>
        <%= f.text_field :name, autofocus: false, class: 'input input-bordered w-full', placeholder: "Full name" %>
      </div>

      <div class="form-control mb-6">
        <%= f.label :email, class: 'label' %>
        <%= f.email_field :email, autofocus: false, class: 'input input-bordered w-full', placeholder: "Email Address" %>
      </div>

      <div class="form-control mb-6">
        <%= f.label :avatar, class: 'label' %>
        <%= f.file_field :avatar, accept:'image/*', class: 'input input-bordered w-full' %>
      </div>

      <%= image_tag avatar_path(f.object), class: "rounded border shadow-sm d-block mx-auto my-3" %>

      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <div class="alert alert-warning">Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
      <% end %>

      <div class="form-control mb-6">
        <%= f.label :password, class: 'label' %>
        <%= f.password_field :password, autocomplete: "off", class: 'input input-bordered w-full', placeholder: 'Password'  %>
        <p class="form-text text-muted"><small>Leave password blank if you don't want to change it</small></p>
      </div>

      <div class="form-control mb-6">
        <%= f.label :password_confirmation, class: 'label' %>
        <%= f.password_field :password_confirmation, autocomplete: "off", class: 'input input-bordered w-full', placeholder: 'Confirm Password'  %>
      </div>

      <div class="form-control mb-6">
        <%= f.label :current_password, class: 'label' %>
        <%= f.password_field :current_password, autocomplete: "off", class: 'input input-bordered w-full', placeholder: 'Current Password'  %>
        <p class="form-text text-muted"><small>We need your current password to confirm your changes</small></p>
      </div>

      <div class="mb-6 d-grid">
        <%= f.submit "Save Changes", class: 'btn btn-wide btn-primary' %>
      </div>
    <% end %>
    <hr>

    <p class="text-center">
      <%= link_to "Deactivate my account", registration_path(resource_name), data: { confirm: "Are you sure? You cannot undo this." }, method: :delete %>
    </p>
  </div>
</div>
